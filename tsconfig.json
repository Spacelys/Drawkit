{
    "compilerOptions": {
		"baseUrl": "src",
        "outDir": "./dist/",
		"sourceMap": true,
		"declaration": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "jsxFactory": "h",
		"allowJs": true,
		"lib": ["es6", "dom"],
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.stories.ts"
    ],
}